<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<h2>Comentarios</h2>
<% render @post.comments%>

<h2>Comentar</h2>
<%= form_for([@post,@post.comments.build]) do |f| %>
<div class="field">
	<% f.label :commenter%></br>
<	% f.text_field :commenter%>
 <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

<%= link_to 'Edit post', edit_post_path(@post) %> |
